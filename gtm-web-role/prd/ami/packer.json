{
  "variables": {
    "source_ami": "",
    "region": "",
    "vpc_id": "",
    "tr_application_asset_insight_id": "",
    "tr_environment_type": "",
    "tr_resource_owner": "",
    "tag_name": "",
    "packer_profile": "",
    "security_group": "",
    "nonprod_account": "",
    "prod_account": "",
    "Release_ReleaseWebURL": "",
    "Release_ReleaseName": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{ user `region` }}",
      "source_ami": "{{ user `source_ami` }}",
      "iam_instance_profile": "{{user `packer_profile`}}",
      "instance_type": "t3.2xlarge",
      "ami_name": "gtm-web-ami-{{timestamp}}",
      "user_data_file": "ami/user-data.txt",
      "ami_description": "win-packer",
      "vpc_id": "{{ user `vpc_id` }}",
      "temporary_key_pair_name": "a{{user `tr_application_asset_insight_id`}}-packer-{{uuid}}",
      "encrypt_boot": "true",
      "ami_users": "{{user `nonprod_account`}},{{user `prod_account`}}",
      "subnet_filter": {
        "filters": {
          "tag:Name": "tr-vpc-1.private.*"
        },
        "most_free": true,
        "random": true
      },
      "associate_public_ip_address": "false",
      "security_group_id": "{{user `security_group`}}",
      "shutdown_behavior": "terminate",
      "kms_key_id": "arn:aws:kms:us-east-1:460300312212:alias/a205257/cicd/secret/ami-encryption-key",
      "ami_regions": [
        "us-east-1",
        "us-west-2"
      ],
      "region_kms_key_ids": {
        "us-east-1": "arn:aws:kms:us-east-1:460300312212:alias/a205257/cicd/secret/ami-encryption-key",
        "us-west-2": "arn:aws:kms:us-west-2:460300312212:alias/a205257/cicd/secret/ami-encryption-key"
      },
      "communicator": "winrm",
      "pause_before_connecting": "2m",
      "winrm_username": "Administrator",
      "windows_password_timeout": "20m",
      "winrm_timeout": "20m",
      "winrm_port": 5986,
      "winrm_use_ntlm": true,
      "winrm_use_ssl": true,
      "winrm_insecure": true,
      "run_tags": {
        "Name": "{{ user `tag_name` }}",
        "tr:resource-owner": "{{ user `tr_resource_owner` }}",
        "tr:environment-type": "{{ user `tr_environment_type` }}",
        "tr:application-asset-insight-id": "{{ user `tr_application_asset_insight_id` }}",
        "ado:ReleaseWebURL": "{{ user `Release_ReleaseWebURL` }}",
        "ado:ReleaseName": "{{ user `Release_ReleaseName` }}"
      },
      "tags": {
        "Name": "{{ user `tag_name` }}",
        "tr:resource-owner": "{{ user `tr_resource_owner` }}",
        "tr:environment-type": "{{ user `tr_environment_type` }}",
        "tr:application-asset-insight-id": "{{ user `tr_application_asset_insight_id` }}",
        "ado:ReleaseWebURL": "{{ user `Release_ReleaseWebURL` }}",
        "ado:ReleaseName": "{{ user `Release_ReleaseName` }}"
      },
      "launch_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sda1",
          "volume_size": 30,
          "volume_type": "gp2"
        },
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdb",
          "volume_size": 20,
          "volume_type": "gp2",
          "encrypted": true
        }
      ],
      "ami_block_device_mappings": [
        {
          "delete_on_termination": true,
          "device_name": "/dev/sda1",
          "volume_size": 30,
          "volume_type": "gp2"
        },
        {
          "delete_on_termination": true,
          "device_name": "/dev/sdb",
          "volume_size": 20,
          "volume_type": "gp2"
        }
      ]
    }
  ],
  "provisioners": [
    {
      "type": "powershell",
      "script": "ami/disks.ps1"
    },
    {
      "type": "powershell",
      "script": "ami/install-app.ps1"
    },
    {
      "type": "powershell",
      "inline": [
        "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\InitializeInstance.ps1 -Schedule",
        "C:\\ProgramData\\Amazon\\EC2-Windows\\Launch\\Scripts\\SysprepInstance.ps1 -NoShutdown"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "manifest",
      "output": "packer-artifact-manifest.json",
      "strip_path": true
    }
  ]
}
